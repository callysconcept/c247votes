<?xml version='1.0' encoding='utf-8'?>
<widget xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" id="com.callysconcept.247votes" version="1.0.0" android-versionCode="10000">
    <name>247votes</name>
    <description>
        Nigeria's First Online Voting Platform | 247Votes NIG LTD&trade
    </description>
    <author email="support@callysconcept.com" href="http://247votes.com.ng">
        CALLYs Global Concept
    </author>
	
<preference name='phonegap-version' value='cli-9.0.0' />
<preference name='pgb-builder-version' value='2' />
  <!--<preference name="android-build-tool" value="gradle" /> -->
<preference name="android-minSdkVersion" value="14" />
<preference name="android-targetSdkVersion" value="28"/> 
<preference name="loadUrlTimeoutValue" value="60000" />
	
    <content src="index.html" />
    <preference name="DisallowOverscroll" value="true" />
    
	<plugin name="onesignal-cordova-plugin" source="npm" spec="2.4.5" />
	<plugin name="cordova-plugin-battery-status" source="npm" spec="~1.2.4"/>
    <plugin name="cordova-plugin-camera" source="npm" spec="~2.4.1" />
    <plugin name="cordova-plugin-media-capture" source="npm" spec="~1.4.3" />
    <plugin name="cordova-plugin-device" source="npm" spec="~1.1.6" />
    <plugin name="cordova-plugin-dialogs" source="npm" spec="~1.3.3" />
    <plugin name="cordova-plugin-file" source="npm" spec="~4.3.3" />
    <plugin name="cordova-plugin-inappbrowser" source="npm" spec="~1.7.1" />
    <plugin name="cordova-plugin-network-information" source="npm" spec="~1.3.3" />
    <plugin name="cordova-plugin-vibration" source="npm" spec="~2.1.5" />
	<plugin name="cordova-plugin-whitelist" spec="~1.3.3" />
	
    <platform name="android">
    <allow-intent href="market:*"/>
    <!-- ONESIGNAL-->
    <resource-file src="platforms/android/drawable-mdpi/ic_stat_onesignal_default.png" target="res/drawable-mdpi/ic_stat_onesignal_default.png" />
    <resource-file src="platforms/android/drawable-hdpi/ic_stat_onesignal_default.png" target="res/drawable-hdpi/ic_stat_onesignal_default.png" />
    <resource-file src="platforms/android/drawable-xhdpi/ic_stat_onesignal_default.png" target="res/drawable-xhdpi/ic_stat_onesignal_default.png" />
    <resource-file src="platforms/android/drawable-xxhdpi/ic_stat_onesignal_default.png" target="res/drawable-xxhdpi/ic_stat_onesignal_default.png" />
    <resource-file src="platforms/android/drawable-xxxhdpi/ic_stat_onesignal_default.png" target="res/drawable-xxxhdpi/ic_stat_onesignal_default.png" />
    <icon src="res/icon/android/mipmap-ldpi/247votes.png" density="ldpi"/>
    <icon src="res/icon/android/mipmap-mdpi/247votes.png" density="mdpi"/>
    <icon src="res/icon/android/mipmap-hdpi/247votes.png" density="hdpi"/>
    <icon src="res/icon/android/mipmap-xhdpi/247votes.png" density="xhdpi"/>
    <icon src="res/icon/android/mipmap-xxhdpi/247votes.png" density="xxhdpi"/>
    <icon src="res/icon/android/mipmap-xxxhdpi/247votes.png" density="xxxhdpi"/>
          </platform>
 
  
  <platform name="windows">
        <icon src="res/icon/windows/Wide310x150Logo.scale-240.png" platform="windows" width="744" height="360"/>
    </platform>
	
	
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
</widget>
